<Window x:Class="N.I.C.E.___Nextspace_Intelligent_Combo_Evaluator.View.ChoiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Mission Control" Height="200" Width="450" 
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterOwner" ShowInTaskbar="False">

    <Border Background="#2D2D30" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" Opacity="0.5" ShadowDepth="5"/>
        </Border.Effect>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TxtMessage" Grid.Row="0" Foreground="#E0E0E0" 
                       FontFamily="Segoe UI Semibold" TextWrapping="Wrap" FontSize="13" 
                       VerticalAlignment="Center" TextAlignment="Center"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">

                <Button x:Name="BtnCancel" Click="Cancel_Click" Width="160" Margin="0,0,15,0"
                        Background="#15FFFFFF" Foreground="#BBFFFFFF" BorderBrush="#22FFFFFF" 
                        FontFamily="Segoe UI" Height="30"/>

                <Button x:Name="BtnConfirm" Click="Confirm_Click" Width="160" IsDefault="True"
                        Background="#22007ACC" Foreground="#007ACC" BorderBrush="#007ACC" 
                        FontFamily="Segoe UI" Height="30"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>