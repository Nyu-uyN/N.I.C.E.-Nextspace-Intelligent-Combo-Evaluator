<Window x:Class="N.I.C.E.___Nextspace_Intelligent_Combo_Evaluator.View.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:N.I.C.E.___Nextspace_Intelligent_Combo_Evaluator.View"
        mc:Ignorable="d"
        Title="Log Window" Height="450" Width="800"
        WindowStartupLocation="Manual"
        Background="#2D2D30" WindowStyle="None" AllowsTransparency="True"
        BorderBrush="#007ACC" BorderThickness="1">
    <Window.Resources>
        <Style x:Key="LogTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="10" Height="10" Fill="#007ACC" Margin="0,0,8,0"/>
                <TextBlock Text="Logs" Foreground="#007ACC" 
                           FontWeight="Bold" FontFamily="Segoe UI Semibold" />
            </StackPanel>

            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <TextBlock Text="ELAPSED: " Style="{StaticResource LogTextStyle}" 
                           Foreground="#66FFFFFF" FontSize="10"/>
                <TextBlock Text="{Binding CurrentElapsed}" Foreground="Tomato" 
                           FontFamily="Consolas" FontWeight="Bold" FontSize="14"/>
            </StackPanel>
        </DockPanel>

        <ScrollViewer Grid.Row="1" x:Name="LogScroller" 
                      VerticalScrollBarVisibility="Auto" 
                      ScrollChanged="LogScroller_ScrollChanged">
            <ItemsControl ItemsSource="{Binding Logs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding Timestamp}" 
                                       Foreground="#66FFFFFF" FontFamily="Consolas" FontSize="12" VerticalAlignment="Top" Margin="0,2,0,0"/>

                            
                            <TextBlock Grid.Column="1" Text="{Binding Message}" 
                                       Style="{StaticResource LogTextStyle}" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="12" Margin="0,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
