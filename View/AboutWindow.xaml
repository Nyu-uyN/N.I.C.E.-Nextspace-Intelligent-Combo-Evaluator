<Window x:Class="N.I.C.E.___Nextspace_Intelligent_Combo_Evaluator.View.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About N.I.C.E." Height="300" Width="500" 
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="White" WindowStyle="None">
    <Border Background="#2D2D30" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="12">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,10,0,0">
                <Image Source="/Resources/nicelogo.png" Width="120" Height="120" RenderOptions.BitmapScalingMode="HighQuality">
                    <Image.Effect>
                        <DropShadowEffect BlurRadius="15" Direction="270" Opacity="0.2" ShadowDepth="5"/>
                    </Image.Effect>
                </Image>

            </StackPanel>

            <StackPanel Grid.Column="1" Margin="20,0,0,0">
                <TextBlock Text="N.I.C.E." FontSize="32" FontWeight="Black" Foreground="#007ACC"/>
                <TextBlock Text="Nextspace Intelligent Combo Evaluator" FontSize="12" Foreground="#666" TextWrapping="Wrap" Margin="0,0,0,15"/>

                <Separator Background="#EEE" Margin="0,0,0,15"/>

                <TextBlock x:Name="VersionText" FontSize="12" FontWeight="SemiBold" Foreground="#007ACC"/>
                <TextBlock x:Name="BuildDateText" FontSize="11" Foreground="#888" Margin="0,2,0,15"/>

                <Button Click="CopyDiagnostics_Click" Content="Copy System Info" FontSize="10" Padding="8,2" HorizontalAlignment="Left" Background="#F8F9FA"/>

                <TextBlock Margin="0,20,0,0">
                <Hyperlink NavigateUri="https://buymeacoffee.com/nyunyu" RequestNavigate="Hyperlink_RequestNavigate">
                    Support with a coffee ☕
                </Hyperlink>
                </TextBlock>

                <TextBlock Text="Created by Nyu" Margin="0,10,0,0" FontSize="11" FontStyle="Italic" Foreground="#999"/>
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="Licensed under CC BY-NC-SA 4.0" 
                   FontSize="10" 
                   Foreground="#888" 
                   HorizontalAlignment="Left"/>
                    <TextBlock FontSize="9" Foreground="#666" TextWrapping="Wrap" Margin="0,1,0,0">
            Attribution - NonCommercial - ShareAlike
                    </TextBlock>
                </StackPanel>
            </StackPanel>

            <Button Content="Close" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                Padding="20,5" Click="Close_Click" IsCancel="True"/>
        </Grid>
    </Border>
</Window>